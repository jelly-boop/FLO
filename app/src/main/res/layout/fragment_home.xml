<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <androidx.viewpager2.widget.ViewPager2
           android:id="@+id/home_content_vp"
           android:layout_width="match_parent"
           android:layout_height="430dp"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.0"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent" />

       <com.google.android.material.tabs.TabLayout
           android:id="@+id/home_tb"
           android:layout_width="wrap_content"
           android:layout_height="30dp"
           app:tabBackground="@drawable/tab_selector"
           app:tabGravity="center"
           app:tabIndicatorHeight="0dp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/home_content_vp"/>

       <TextView
           android:id="@+id/home_today_song"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="오늘 발매 노래"
           android:textSize="20sp"
           android:textColor="#000000"
           android:textStyle="bold"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toStartOf="@+id/home_arrow"
           android:layout_marginStart="20dp"
           android:layout_marginTop="10dp"
           app:layout_constraintTop_toBottomOf="@+id/home_tb"/>
       <ImageView
           android:id="@+id/home_arrow"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:src="@drawable/btn_arrow_more"
           app:layout_constraintStart_toEndOf="@+id/home_today_song"
           app:layout_constraintTop_toBottomOf="@+id/home_tb"
           android:layout_marginTop="10dp" />

       <TextView
           android:id="@+id/home_total"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#8b00ff "
           android:text="종합"
           android:textStyle="bold"
           android:textSize="17sp"
           android:layout_marginEnd="20dp"
           app:layout_constraintTop_toBottomOf="@+id/home_tb"
           app:layout_constraintEnd_toStartOf="@+id/home_local"
           android:layout_marginTop="12dp" />
       <TextView
           android:id="@+id/home_local"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="국내"
           android:textSize="17sp"
           android:textStyle="bold"
           app:layout_constraintTop_toBottomOf="@+id/home_tb"
           app:layout_constraintEnd_toStartOf="@+id/home_popular"
           android:layout_marginEnd="20dp"
           android:layout_marginTop="12dp" />

       <TextView
           android:id="@+id/home_popular"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="12dp"
           android:layout_marginEnd="20dp"
           android:text="해외"
           android:textStyle="bold"
           android:textSize="17sp"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/home_tb" />

       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/home_today_song_recycle"
           android:layout_width="match_parent"
           android:layout_height="210dp"
           android:layout_marginTop="10dp"
           tools:listitem="@layout/item_album"
           app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
           android:orientation="horizontal"
           app:layout_constraintTop_toBottomOf="@+id/home_today_song"
           />



       <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/home_banner_vp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/home_today_song_recycle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

       <TextView
           android:id="@+id/home_viewpager_tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="매일 들어도 좋은 팟캐스트"
           android:textColor="#000000"
           android:textSize="25sp"
           android:textStyle="bold"
           android:layout_marginStart="10dp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/home_banner_vp"/>
       <ImageView
           android:id="@+id/home_potcast_1"
           android:layout_width="150dp"
           android:layout_height="150dp"
           android:src="@drawable/img_potcast_exp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/home_viewpager_tv"
           android:layout_marginStart="20dp"
           android:layout_marginTop="10dp"/>
       <TextView
           android:id="@+id/home_potcast_song_1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="제목"
           android:layout_marginTop="10dp"
           android:textStyle="bold"
           android:textSize="25sp"
           android:textColor="#000000"
           app:layout_constraintTop_toBottomOf="@+id/home_potcast_1"
           app:layout_constraintStart_toStartOf="parent"
           android:layout_marginStart="20dp"/>
       <TextView
           android:id="@+id/home_potcast_singer_1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="가수"
           android:textStyle="bold"
           android:textSize="20sp"
           app:layout_constraintTop_toBottomOf="@+id/home_potcast_song_1"
           app:layout_constraintStart_toStartOf="parent"
           android:layout_marginStart="20dp"/>

       <ImageView
           android:id="@+id/home_potcast_2"
           android:layout_width="150dp"
           android:layout_height="150dp"
           android:src="@drawable/img_potcast_exp"
           app:layout_constraintStart_toEndOf="@+id/home_potcast_1"
           app:layout_constraintTop_toBottomOf="@+id/home_viewpager_tv"
           android:layout_marginStart="20dp"
           android:layout_marginTop="10dp"/>
       <TextView
           android:id="@+id/home_potcast_song_2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="제목"
           android:layout_marginTop="10dp"
           android:textStyle="bold"
           android:textSize="25sp"
           android:textColor="#000000"
           app:layout_constraintTop_toBottomOf="@+id/home_potcast_2"
           app:layout_constraintStart_toEndOf="@+id/home_potcast_1"
           android:layout_marginStart="20dp"/>
       <TextView
           android:id="@+id/home_potcast_singer_2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="가수"
           android:textStyle="bold"
           android:textSize="20sp"
           app:layout_constraintTop_toBottomOf="@+id/home_potcast_song_1"
           app:layout_constraintStart_toEndOf="@+id/home_potcast_1"
           android:layout_marginStart="20dp"/>

       <ImageView
           android:id="@+id/home_potcast_3"
           android:layout_width="150dp"
           android:layout_height="150dp"
           android:src="@drawable/img_potcast_exp"
           app:layout_constraintStart_toEndOf="@+id/home_potcast_2"
           app:layout_constraintTop_toBottomOf="@+id/home_viewpager_tv"
           android:layout_marginStart="20dp"
           android:layout_marginTop="10dp"/>
       <TextView
           android:id="@+id/home_potcast_song_3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="제목"
           android:layout_marginTop="10dp"
           android:textStyle="bold"
           android:textSize="25sp"
           android:textColor="#000000"
           app:layout_constraintTop_toBottomOf="@+id/home_potcast_2"
           app:layout_constraintStart_toEndOf="@+id/home_potcast_2"
           android:layout_marginStart="20dp"/>
       <TextView
           android:id="@+id/home_potcast_singer_3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="가수"
           android:textStyle="bold"
           android:textSize="20sp"
           app:layout_constraintTop_toBottomOf="@+id/home_potcast_song_1"
           app:layout_constraintStart_toEndOf="@+id/home_potcast_2"
           android:layout_marginStart="20dp"/>

       <TextView
           android:id="@+id/home_collection_tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="비디오 콜렉션"
           android:layout_marginTop="10dp"
           android:textStyle="bold"
           android:textSize="25sp"
           android:textColor="#000000"
           android:layout_marginBottom="10dp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/home_potcast_singer_2"
           android:layout_marginStart="10dp"
           app:layout_goneMarginTop="20dp"/>
       <ImageView
           android:id="@+id/home_collection_iv"
           android:layout_width="300dp"
           android:layout_height="150dp"
           android:src="@drawable/img_video_exp"
           app:layout_constraintTop_toBottomOf="@id/home_collection_tv"
           app:layout_constraintStart_toStartOf="parent"/>
       <TextView
           android:id="@+id/home_collection_song_1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="제목"
           android:layout_marginTop="20dp"
           android:textStyle="bold"
           android:textSize="25sp"
           android:textColor="#000000"
           app:layout_constraintTop_toBottomOf="@+id/home_collection_iv"
           app:layout_constraintStart_toStartOf="parent"
           android:layout_marginStart="20dp"/>
       <TextView
           android:id="@+id/home_collection_singer_1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="가수"
           android:textStyle="bold"
           android:textSize="20sp"
           app:layout_constraintTop_toBottomOf="@+id/home_collection_song_1"
           app:layout_constraintStart_toStartOf="parent"
           android:layout_marginStart="20dp"/>

       <ImageView
           android:id="@+id/home_collection2_iv"
           android:layout_width="300dp"
           android:layout_height="150dp"
           android:src="@drawable/img_video_exp"
           app:layout_constraintTop_toBottomOf="@id/home_collection_tv"
           app:layout_constraintStart_toEndOf="@id/home_collection_iv"/>
       <TextView
           android:id="@+id/home_collection_song_2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="제목"
           android:layout_marginTop="20dp"
           android:textStyle="bold"
           android:textSize="25sp"
           android:textColor="#000000"
           app:layout_constraintTop_toBottomOf="@+id/home_collection2_iv"
           app:layout_constraintStart_toEndOf="@id/home_collection_iv"
           android:layout_marginStart="20dp"/>
       <TextView
           android:id="@+id/home_collection_singer_2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="가수"
           android:textStyle="bold"
           android:textSize="20sp"
           app:layout_constraintTop_toBottomOf="@+id/home_collection_song_1"
           app:layout_constraintStart_toEndOf="@id/home_collection_iv"
           android:layout_marginStart="20dp"/>

       <ImageView
           android:id="@+id/home_banner_iv"
           android:layout_width="400dp"
           android:layout_height="400dp"
           android:src="@drawable/discovery_banner_aos"
           app:layout_constraintTop_toBottomOf="@+id/home_collection_singer_1"
           app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <ImageView
        android:id="@+id/home_banner2_iv"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/img_home_viewpager_exp2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_banner_iv" />

    <ImageView
        android:id="@+id/home_twitter_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_main_twitter_btn"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_banner2_iv"
        app:layout_constraintHorizontal_bias="0.8"
        />

    <ImageView
        android:id="@+id/home_youtube_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_main_youtube_btn"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_banner2_iv"
        app:layout_constraintHorizontal_bias="0.6"
       />

    <ImageView
        android:id="@+id/home_insata_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_main_instagram_btn"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_banner2_iv"
        app:layout_constraintHorizontal_bias="0.4"
       />
    <ImageView
        android:id="@+id/home_facebook_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_main_facebook_btn"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_banner2_iv"
        app:layout_constraintHorizontal_bias="0.2"/>

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/home_dreamcompany_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     android:text="(주)드림어스컴퍼니니 사업자 정보"
     android:textSize="17sp"
        android:textStyle="bold"
     app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_facebook_iv"
        app:layout_constraintHorizontal_bias="0.4"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
     android:src="@drawable/btn_arrow_more"
        app:layout_constraintTop_toBottomOf="@+id/home_facebook_iv"
     app:layout_constraintStart_toEndOf="@+id/home_dreamcompany_tv"
        android:layout_marginTop="15dp"/>














   </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>