<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/song_player_setting_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/btn_player_setting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/song_eq_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_player_eq_off"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@+id/song_player_setting_iv"
        android:layout_marginStart="10dp"/>
    <ImageButton
        android:id="@+id/song_arrow_down_ib"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/nugu_btn_down"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"/>
    <ImageView
        android:id="@+id/song_more_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/btn_player_more"
        app:layout_constraintTop_toBottomOf="@+id/song_arrow_down_ib"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:id="@+id/song_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/song_more_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/song_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가수"
        android:textStyle="bold"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/song_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"/>
    <ImageView
        android:id="@+id/arrow_right_iv"
        android:src="@drawable/btn_arrow_more"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:layout_constraintTop_toBottomOf="@+id/song_title_tv"
        app:layout_constraintStart_toEndOf="@+id/song_singer_tv"
        android:layout_marginTop="16dp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/song_album_exp2_cv"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@+id/arrow_right_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        >
        <ImageView

            android:id="@+id/song_album_exp2_iv"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/img_album_exp2"
            android:layout_marginTop="15dp"/>
    </androidx.cardview.widget.CardView>
    <ScrollView
        android:id="@+id/song_lyrics_sv"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/song_album_exp2_cv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:textSize="15sp"
            android:text="나라는 꽃가루에 눈이 따끔해 아야
눈물이 고여도 꾹 참을래
내 마음 한켠 비밀스런 오르골에 넣어두고서
영원히 되감을 순간이니까"
            android:lineSpacingExtra ="5dp"
            android:textAlignment="center"/>
    </ScrollView>
    <ImageView
        android:id="@+id/song_mylike_iv"
        android:src="@drawable/ic_my_like_off"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/song_lyrics_sv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        android:layout_marginTop="20dp"/>
    <ImageView
        android:id="@+id/song_unlike_iv"
        android:src="@drawable/btn_player_unlike_off"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/song_lyrics_sv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        android:layout_marginTop="20dp"/>
    <View
        android:id="@+id/song_status_v"
        android:layout_width="380dp"
        android:layout_height="3dp"
        android:background="#D3D3D3"
        app:layout_constraintTop_toBottomOf="@+id/song_unlike_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/song_play_start_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textColor="@color/purple_500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_status_v"
        android:layout_marginStart="15dp"/>
    <TextView
        android:id="@+id/song_play_finish_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01:00"
        app:layout_constraintEnd_toEndOf="@id/song_status_v"
        app:layout_constraintTop_toBottomOf="@id/song_status_v"
        />
    <ImageView
        android:id="@+id/song_repeat_iv"
        android:src="@drawable/nugu_btn_repeat_inactive"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/song_play_start_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        />
    <ImageView
        android:id="@+id/song_random_iv"
        android:src="@drawable/nugu_btn_random_inactive"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/song_play_start_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.98"
        />
    <ImageView
        android:id="@+id/song_play_iv"
        android:src="@drawable/nugu_btn_play_32"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/song_play_start_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/song_pause_iv"
        android:visibility="gone"
        android:src="@drawable/nugu_btn_pause_32"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/song_play_start_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/song_next_iv"
        android:src="@drawable/nugu_btn_skip_next_32"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@+id/song_play_start_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"/>

    <ImageView
        android:id="@+id/song_previous_iv"
        android:src="@drawable/nugu_btn_skip_previous_32"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@+id/song_play_start_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"/>

    <ImageView
        android:id="@+id/song_insta_iv"
        android:src="@drawable/btn_actionbar_instagram"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="15dp"/>

    <ImageView
        android:id="@+id/song_relate_iv"
        android:src="@drawable/btn_player_related"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="15dp"/>
    <ImageView
        android:id="@+id/song_list_iv"
        android:src="@drawable/btn_player_go_list"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="15dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>