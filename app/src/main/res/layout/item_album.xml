<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="20dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/home_cover_cv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:elevation="6dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/home_cover_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/album_cover_sickmode"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/home_cover_play_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/btn_panel_play_large"

            android:layout_marginTop="100dp"
            android:layout_marginLeft="100dp"/>

    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/home_cover_song_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Butter"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/home_cover_cv"
        app:layout_constraintStart_toStartOf="@id/home_cover_cv"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/home_cover_singer_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BTS(feat.MeganTheeStalion)"
        android:textStyle="bold"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@+id/home_cover_song_2"
        app:layout_constraintStart_toStartOf="@id/home_cover_cv"
        android:layout_marginStart="10dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>