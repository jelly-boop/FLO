<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/album_arrow_back_ib"
        android:src="@drawable/btn_arrow_black"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <ImageView
        android:id="@+id/album_more_iv"
        android:src="@drawable/btn_player_more"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/album_like_off_ib"
        android:src="@drawable/ic_my_like_off"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/album_more_iv"/>
    <TextView
        android:id="@+id/album_name_tv"
        android:text="BTS  ALBUM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/album_like_off_ib"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/album_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="방탄소년단"
        app:layout_constraintTop_toBottomOf="@+id/album_name_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/album_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021.03.25 | 정규 | 댄스 팝"
        app:layout_constraintTop_toBottomOf="@+id/album_singer_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/album_info_tv"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    >

</LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:id="@+id/image_layout"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintTop_toBottomOf="@+id/album_info_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:contentPadding="0dp"
        app:cardBackgroundColor="#fff"
        app:strokeColor="#ffff"
        >
       <ImageView
           android:id="@+id/album_albumCover_iv"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:scaleType="fitEnd"
           android:src="@drawable/img_album_exp"/>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/album_lp_iv"
        android:layout_width="50dp"
        android:layout_height="200dp"
        android:src="@drawable/img_album_lp"
        app:layout_constraintStart_toEndOf="@id/image_layout"
        app:layout_constraintTop_toTopOf="@+id/image_layout" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/album_content_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorColor="#3f3fff"
        app:tabTextColor="#3f3fff"
        app:tabRippleColor="#00ff0000"
        app:layout_constraintTop_toBottomOf="@+id/image_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/album_content_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/album_content_tb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


